@model BookInventoryViewModel
@using BookInventoryMangmentEF.Models

@{
    string pageType = Model.CurrentBook.BookId > 0 ? "Update Book" : "Create Book";

    ViewData["Title"] = $"Practice Application | {pageType}";
}

<form action="~/BookInventory/Index" method="post">
    <div id="info">
        <div class="row">
            <div class="col-6 offset-3 text-center">
                <h1 class="display-4" style="margin: 15px 0px;">@pageType</h1>
            </div>
        </div>
       
        <div class="form-row">
            <div class="col-md-3 offset-md-3 form-group">
                <label>Book Name: </label>
                <input type="text" required class="form-control" name="bookName" value="@Model.CurrentBook.BookName"/>
            </div>
            
        </div>
        
        <div class="form-row">
            
            <div class="col-md-6 offset-md-3 form-group">
                <label>Author: </label>
                <input type="text" required class="form-control" name="author" value="@Model.CurrentBook.Author"/>
            </div>
            
        </div>
        
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Quantity: </label>
                <input type="text" required  class="form-control" name="quantity" value="@Model.CurrentBook.Quantity" />
            </div>
        </div>
         <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Price: </label>
                <input type="text" required  class="form-control" name="price" value="@Model.CurrentBook.Price" />
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3">
                <button type="button" class="btn btn-secondary" onclick="location.href = '/BookInventory/Index'">CANCEL</button>
                <button type="submit" class="btn btn-primary">SAVE Book</button>
            </div>
        </div>
    </div>
    <input type="hidden" name="bookId" value="@Model.CurrentBook.BookId" />
</form>
